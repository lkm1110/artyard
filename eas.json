{
  "cli": {
    "version": ">= 12.0.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "android": {
        "buildType": "app-bundle",
        "env": {
          "NODE_OPTIONS": "--max-old-space-size=4096"
        }
      }
    },
    "production-apk": {
      "android": {
        "buildType": "apk",
        "env": {
          "NODE_OPTIONS": "--max-old-space-size=4096"
        }
      }
    }
  },
  "submit": {
    "production": {}
  }
}
