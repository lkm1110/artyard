{
  "expo": {
    "name": "ArtYard",
    "slug": "artyard",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "artyard",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#EC4899"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.artyard.app",
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "artyard",
            "CFBundleURLSchemes": [
              "artyard"
            ]
          }
        ],
        "NSCameraUsageDescription": "ArtYard needs access to your camera to take photos of your artwork.",
        "NSPhotoLibraryUsageDescription": "ArtYard needs access to your photo library to select artwork images.",
        "NSMicrophoneUsageDescription": "ArtYard needs access to microphone for video recordings.",
        "NSUserTrackingUsageDescription": "This identifier will be used to deliver personalized ads to you.",
        "SKAdNetworkItems": [
          {
            "SKAdNetworkIdentifier": "v9wttpbfk9.skadnetwork"
          },
          {
            "SKAdNetworkIdentifier": "n38lu8286q.skadnetwork"
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#EC4899"
      },
      "package": "com.artyard.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.RECORD_AUDIO"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "artyard"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "supabaseUrl": "https://your-project.supabase.co",
      "supabaseAnonKey": "your-anon-key",
      "eas": {
        "projectId": "273782f5-efd0-4ebc-be22-667922222f8d"
      }
    },
    "plugins": [
      "expo-secure-store",
      "expo-image-picker",
      "expo-notifications",
      [
        "expo-apple-authentication",
        {
          "appleTeamId": "9T69A85KY2"
        }
      ],
      [
        "expo-facebook",
        {
          "appID": "822804507070963",
          "clientToken": "c41a0c7b898b7de587db31ea76517853",
          "displayName": "ArtYard",
          "scheme": "fb822804507070963",
          "advertiserIDCollectionEnabled": false,
          "autoLogAppEventsEnabled": false,
          "isAutoInitEnabled": true,
          "iosUserTrackingPermission": "This identifier will be used to deliver personalized ads to you."
        }
      ]
    ],
    "owner": "lavlna280"
  }
}
